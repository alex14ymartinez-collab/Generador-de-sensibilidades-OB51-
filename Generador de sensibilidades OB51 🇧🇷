<script>
function generar(conDpi){
const sensibilidad=[
"General","Mira de punto rojo","Mira 2x","Mira 4x","Mira francotirador","Botón de cámara 360°","Botón de disparo"
];
const resultados=document.getElementById("resultados");
resultados.innerHTML="";

// DPI aleatorio entre 360 y 800
const dpiMin=360;
const dpiMax=800;
const dpiValor = Math.floor(Math.random()*(dpiMax-dpiMin+1))+dpiMin;

sensibilidad.forEach(item=>{
const valor=Math.floor(Math.random()*201); // 0-200
resultados.innerHTML+=`<tr><td>${item}</td><td class="neon">${valor}</td></tr>`;
});

if(conDpi){
  resultados.innerHTML+=`<tr><td><strong>DPI</strong></td><td class="neon"><strong>${dpiValor}</strong></td></tr>`;
}

document.getElementById("tabla").classList.add("visible");
}
</script>
